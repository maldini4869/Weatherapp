<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_1"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/hour_temp_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hour_temp_c"
                android:fontFamily="@font/poppins_bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/MAX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@color/red"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/hour_wind_kph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="hour_wind_kph"
                android:fontFamily="@font/poppins_bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/MIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind speed"
                android:textColor="@color/blue"
                tools:ignore="MissingConstraints" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/hour_pressure_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hour_pressure_mb"
                android:fontFamily="@font/poppins_bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/PRESSURE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textColor="@color/green"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/hour_precip_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="totprecip_mm"
                android:fontFamily="@font/poppins_bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/PRECIPTOTAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precip"
                android:textColor="@color/yellow"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/hour_icon"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/hour_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="hour_time"
            android:fontFamily="@font/poppins_bold"
            tools:ignore="MissingConstraints" />
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>